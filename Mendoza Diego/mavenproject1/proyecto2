// Clase principal
public class Principal {
    public static void main(String[] args) {
        // Crear un objeto de la clase Animal
        Animal miAnimal = new Animal();
        miAnimal.crearAnimal("4", "Ladrido", "2");
       // System.out.println("El animal es: " + crearAnimal);

        System.out.println("--------------------");

        // Crear un objeto de la clase Perro
        Perro miPerro = new Perro();
        miPerro.crearPerro();
        // System.out.println("Este es un perro con: " + crearPerro);
    }
}

// Subclase Animal
class Animal {
    // Atributos
    String patas;
    String sonido;
    String orejas;

    // Método para crear un animal
    public void crearAnimal(String patas, String sonido, String orejas) {
        this.patas = patas;
        this.sonido = sonido;
        this.orejas = orejas;
        System.out.println("Se creo un animal");
    }
}

// Subclase Perro extensión de animal
class Perro extends Animal {

    // Método para asignar valores específicos de un perro
    public void crearPerro() {
        this.patas = "4";
        this.sonido = "Guau";
        this.orejas = "2";
        System.out.println("Se ha creado un perro");
    }
}
